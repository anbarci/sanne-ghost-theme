{{!< default}}

<main class="error-page" role="main">
    <div class="container-narrow">
        <div class="error-content">
            <div class="error-illustration">
                <svg viewBox="0 0 200 200" class="error-svg">
                    <circle cx="100" cy="100" r="80" fill="none" stroke="var(--color-border)" stroke-width="2"/>
                    <text x="100" y="110" text-anchor="middle" font-size="24" fill="var(--color-text-muted)" font-weight="bold">404</text>
                </svg>
            </div>
            
            <div class="error-text">
                <h1 class="error-title">Page Not Found</h1>
                
                <p class="error-message">
                    The page you're looking for doesn't exist. It might have been moved, deleted, or you entered the wrong URL.
                </p>
                
                <div class="error-actions">
                    <a href="{{@site.url}}" class="button">
                        <svg class="button-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                        </svg>
                        Back to Home
                    </a>
                    
                    <a href="{{@site.url}}/search" class="button button-secondary">
                        <svg class="button-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <circle cx="11" cy="11" r="8"/>
                            <path d="m21 21-4.35-4.35"/>
                        </svg>
                        Search Site
                    </a>
                </div>
                
                {{#if @site.navigation}}
                <div class="error-suggestions">
                    <h3>Popular Pages</h3>
                    <ul class="suggestion-list">
                        {{#foreach @site.navigation limit="5"}}
                        <li><a href="{{url absolute="true"}}">{{label}}</a></li>
                        {{/foreach}}
                    </ul>
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</main>

<style>
.error-page {
    padding: var(--space-20) 0;
    min-height: 50vh;
    display: flex;
    align-items: center;
}

.error-content {
    text-align: center;
    max-width: 500px;
    margin: 0 auto;
}

.error-illustration {
    margin-bottom: var(--space-8);
}

.error-svg {
    width: 120px;
    height: 120px;
    opacity: 0.8;
}

.error-title {
    font-size: var(--text-3xl);
    font-weight: var(--font-bold);
    margin: 0 0 var(--space-4) 0;
}

.error-message {
    font-size: var(--text-lg);
    color: var(--color-text-light);
    line-height: var(--leading-relaxed);
    margin: 0 0 var(--space-8) 0;
}

.error-actions {
    display: flex;
    gap: var(--space-4);
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: var(--space-12);
}

.button-icon {
    width: 16px;
    height: 16px;
    stroke-width: 2;
}

.error-suggestions {
    border-top: 1px solid var(--color-border-light);
    padding-top: var(--space-8);
}

.error-suggestions h3 {
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
    margin: 0 0 var(--space-4) 0;
}

.suggestion-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
}

.suggestion-list a {
    color: var(--color-text-light);
    text-decoration: none;
    padding: var(--space-2);
    border-radius: var(--radius-md);
    transition: all var(--transition-fast);
}

.suggestion-list a:hover {
    color: var(--brand-accent);
    background: var(--color-surface);
}

@media (max-width: 640px) {
    .error-actions {
        flex-direction: column;
        align-items: center;
    }
    
    .error-actions .button {
        width: 200px;
    }
}
</style>