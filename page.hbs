{{!< default}}

<article class="page-container" itemscope itemtype="http://schema.org/WebPage">
    {{#page}}
    <header class="page-header">
        {{#if feature_image}}
        <figure class="page-feature-image">
            <img src="{{img_url feature_image size="xl"}}" 
                 alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                 itemprop="image"
                 loading="eager">
        </figure>
        {{/if}}
        
        <div class="container-narrow">
            <h1 class="page-title" itemprop="headline">{{title}}</h1>
            
            {{#if excerpt}}
            <div class="page-excerpt" itemprop="description">
                <p>{{excerpt}}</p>
            </div>
            {{/if}}
        </div>
    </header>
    
    <div class="page-content container-narrow" itemprop="mainContentOfPage">
        {{content}}
    </div>
    {{/page}}
</article>