{{!< default}}

<header class="tag-header">
    <div class="container-narrow">
        {{#tag}}
        <div class="tag-info">
            <h1 class="tag-name">{{name}}</h1>
            
            {{#if description}}
            <p class="tag-description">{{description}}</p>
            {{/if}}
            
            {{#if feature_image}}
            <figure class="tag-feature-image">
                <img src="{{img_url feature_image size="l"}}" 
                     alt="{{name}}"
                     loading="eager">
            </figure>
            {{/if}}
            
            <div class="tag-meta">
                <span class="tag-count">
                    {{plural ../pagination.total empty='No posts' singular='% post' plural='% posts'}}
                </span>
            </div>
        </div>
        {{/tag}}
    </div>
</header>

<section class="tag-posts">
    <div class="container">
        <div class="posts-grid">
            {{#foreach posts}}
            <article class="post-card" itemscope itemtype="http://schema.org/BlogPosting">
                {{#if feature_image}}
                <figure class="post-card-image">
                    <a href="{{url}}" aria-label="Read {{title}}">
                        <img src="{{img_url feature_image size="m"}}" 
                             alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                             itemprop="image"
                             loading="lazy">
                    </a>
                </figure>
                {{/if}}
                
                <div class="post-card-content">
                    <header class="post-card-header">
                        <h3 class="post-card-title" itemprop="headline">
                            <a href="{{url}}">{{title}}</a>
                        </h3>
                        
                        {{#if excerpt}}
                        <div class="post-card-excerpt" itemprop="description">
                            <p>{{excerpt}}</p>
                        </div>
                        {{/if}}
                    </header>
                    
                    <footer class="post-card-meta">
                        <div class="author-info">
                            {{#primary_author}}
                            <div class="author-card-small" itemscope itemtype="http://schema.org/Person">
                                {{#if profile_image}}
                                <img src="{{img_url profile_image size="xs"}}" 
                                     alt="{{name}}"
                                     class="author-avatar-small"
                                     itemprop="image">
                                {{/if}}
                                <span class="author-name-small" itemprop="name">{{name}}</span>
                            </div>
                            {{/primary_author}}
                        </div>
                        
                        <div class="post-meta-info">
                            <time class="post-card-date" 
                                  datetime="{{date format="YYYY-MM-DD"}}" 
                                  itemprop="datePublished">
                                {{date format="MMM D, YYYY"}}
                            </time>
                            
                            <span class="post-card-reading-time">{{reading_time}}</span>
                        </div>
                    </footer>
                </div>
            </article>
            {{/foreach}}
        </div>
        
        {{pagination}}
    </div>
</section>