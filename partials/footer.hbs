<div class="footer-content">
    <div class="footer-main">
        <div class="footer-brand">
            {{#if @site.logo}}
            <img src="{{img_url @site.logo}}" alt="{{@site.title}}" class="footer-logo">
            {{else}}
            <h3 class="footer-title">{{@site.title}}</h3>
            {{/if}}
            
            {{#if @site.description}}
            <p class="footer-description">{{@site.description}}</p>
            {{/if}}
        </div>
        
        {{#if @site.secondary_navigation}}
        <nav class="footer-nav" role="navigation" aria-label="Footer navigation">
            <ul class="footer-menu">
                {{#foreach @site.secondary_navigation}}
                <li class="footer-nav-item">
                    <a href="{{url absolute="true"}}" 
                       class="footer-nav-link"
                       {{#unless (match url "^/|^#")}}target="_blank" rel="noopener noreferrer"{{/unless}}>
                        {{label}}
                    </a>
                </li>
                {{/foreach}}
            </ul>
        </nav>
        {{/if}}
        
        {{#if @labs.members}}
        <div class="footer-subscribe">
            <h4 class="footer-subscribe-title">Subscribe to {{@site.title}}</h4>
            <p class="footer-subscribe-description">Get the latest posts delivered right to your inbox</p>
            
            <form class="footer-subscribe-form" 
                  data-members-form="subscribe"
                  role="form"
                  aria-label="Newsletter subscription">
                <div class="footer-form-group">
                    <input type="email" 
                           name="email" 
                           placeholder="Your email address"
                           required
                           aria-label="Email address"
                           class="footer-email-input">
                    <button type="submit" class="footer-submit-button">
                        Subscribe
                    </button>
                </div>
                
                <div class="footer-form-message-success" role="alert" aria-live="polite">
                    âœ“ Great! Check your inbox and click the link to confirm your subscription.
                </div>
                
                <div class="footer-form-message-error" role="alert" aria-live="assertive">
                    Please enter a valid email address!
                </div>
            </form>
        </div>
        {{/if}}
    </div>
    
    <div class="footer-bottom">
        <div class="footer-copyright">
            <p>&copy; {{date format="YYYY"}} {{@site.title}}. All rights reserved.</p>
            <p class="footer-powered">Powered by <a href="https://ghost.org/" target="_blank" rel="noopener noreferrer">Ghost</a></p>
        </div>
        
        <div class="footer-social">
            {{#if @site.facebook}}
            <a href="{{facebook_url @site.facebook}}" 
               class="footer-social-link"
               target="_blank"
               rel="noopener noreferrer"
               aria-label="Follow on Facebook">
                <svg class="footer-social-icon" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
            </a>
            {{/if}}
            
            {{#if @site.twitter}}
            <a href="{{twitter_url @site.twitter}}" 
               class="footer-social-link"
               target="_blank"
               rel="noopener noreferrer"
               aria-label="Follow on Twitter">
                <svg class="footer-social-icon" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
            </a>
            {{/if}}
            
            <a href="{{@site.url}}/rss/" 
               class="footer-social-link"
               target="_blank"
               rel="noopener noreferrer"
               aria-label="RSS Feed">
                <svg class="footer-social-icon" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M6.503 20.752c0 1.794-1.456 3.248-3.251 3.248-1.796 0-3.252-1.454-3.252-3.248 0-1.794 1.456-3.248 3.252-3.248 1.795.001 3.251 1.454 3.251 3.248zm-6.503-12.572v4.811c6.05.062 10.96 4.966 11.022 11.009h4.817c-.062-8.71-7.118-15.758-15.839-15.82zm0-3.368c10.58.046 19.152 8.594 19.183 19.188h4.817c-.03-13.231-10.755-23.954-24-24v4.812z"/>
                </svg>
            </a>
        </div>
    </div>
</div>