{{!< default}}

<main class="error-page" role="main">
    <div class="container-narrow">
        <div class="error-content">
            <div class="error-illustration">
                <!-- Simple SVG illustration -->
                <svg viewBox="0 0 200 200" class="error-svg">
                    <circle cx="100" cy="100" r="80" fill="none" stroke="var(--color-border)" stroke-width="2"/>
                    <path d="M70 70 L130 130 M130 70 L70 130" stroke="var(--color-text-muted)" stroke-width="3" stroke-linecap="round"/>
                </svg>
            </div>
            
            <div class="error-text">
                <h1 class="error-title">{{statusCode}}</h1>
                
                <h2 class="error-subtitle">
                    {{#match statusCode "404"}}
                        Page Not Found
                    {{else}}
                        {{#match statusCode "500"}}
                            Internal Server Error
                        {{else}}
                            Something Went Wrong
                        {{/match}}
                    {{/match}}
                </h2>
                
                <p class="error-message">
                    {{#match statusCode "404"}}
                        The page you're looking for doesn't exist or has been moved.
                    {{else}}
                        {{#match statusCode "500"}}
                            We're experiencing some technical difficulties. Please try again later.
                        {{else}}
                            An unexpected error occurred. Please try again or contact support if the problem persists.
                        {{/match}}
                    {{/match}}
                </p>
                
                <div class="error-actions">
                    <a href="{{@site.url}}" class="button">
                        <svg class="button-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                        </svg>
                        Go Home
                    </a>
                    
                    <button onclick="history.back()" class="button button-secondary">
                        <svg class="button-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path d="M19 12H5m7 7l-7-7 7-7"/>
                        </svg>
                        Go Back
                    </button>
                </div>
            </div>
        </div>
    </div>
</main>

<style>
.error-page {
    padding: var(--space-20) 0;
    min-height: 50vh;
    display: flex;
    align-items: center;
}

.error-content {
    text-align: center;
    max-width: 500px;
    margin: 0 auto;
}

.error-illustration {
    margin-bottom: var(--space-8);
}

.error-svg {
    width: 120px;
    height: 120px;
    opacity: 0.8;
}

.error-title {
    font-size: var(--text-4xl);
    font-weight: var(--font-bold);
    color: var(--color-text-muted);
    margin: 0 0 var(--space-4) 0;
    line-height: 1;
}

.error-subtitle {
    font-size: var(--text-2xl);
    font-weight: var(--font-semibold);
    margin: 0 0 var(--space-4) 0;
}

.error-message {
    font-size: var(--text-lg);
    color: var(--color-text-light);
    line-height: var(--leading-relaxed);
    margin: 0 0 var(--space-8) 0;
}

.error-actions {
    display: flex;
    gap: var(--space-4);
    justify-content: center;
    flex-wrap: wrap;
}

.button-icon {
    width: 16px;
    height: 16px;
    stroke-width: 2;
}

@media (max-width: 640px) {
    .error-actions {
        flex-direction: column;
        align-items: center;
    }
    
    .error-actions .button {
        width: 200px;
    }
}
</style>