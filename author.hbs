{{!< default}}

<header class="author-header">
    <div class="container-narrow">
        {{#author}}
        <div class="author-profile" itemscope itemtype="http://schema.org/Person">
            {{#if profile_image}}
            <img src="{{img_url profile_image size="l"}}" 
                 alt="{{name}}"
                 class="author-avatar-hero"
                 itemprop="image">
            {{/if}}
            
            <div class="author-info">
                <h1 class="author-name" itemprop="name">{{name}}</h1>
                
                {{#if bio}}
                <p class="author-bio" itemprop="description">{{bio}}</p>
                {{/if}}
                
                <div class="author-meta">
                    {{#if location}}
                    <span class="author-location" itemprop="address">{{location}}</span>
                    {{/if}}
                    
                    {{#if website}}
                    <a href="{{website}}" class="author-website" rel="noopener noreferrer" target="_blank" itemprop="url">
                        Website
                    </a>
                    {{/if}}
                    
                    <span class="author-stats">
                        {{plural ../pagination.total empty='No posts' singular='% post' plural='% posts'}}
                    </span>
                </div>
            </div>
        </div>
        {{/author}}
    </div>
</header>

<section class="author-posts">
    <div class="container">
        <h2 class="section-title">Posts by {{author.name}}</h2>
        
        <div class="posts-grid">
            {{#foreach posts}}
            <article class="post-card" itemscope itemtype="http://schema.org/BlogPosting">
                {{#if feature_image}}
                <figure class="post-card-image">
                    <a href="{{url}}" aria-label="Read {{title}}">
                        <img src="{{img_url feature_image size="m"}}" 
                             alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                             itemprop="image"
                             loading="lazy">
                    </a>
                </figure>
                {{/if}}
                
                <div class="post-card-content">
                    <header class="post-card-header">
                        {{#if primary_tag}}
                        <span class="post-card-tag" itemprop="articleSection">
                            <a href="{{primary_tag.url}}" rel="tag">{{primary_tag.name}}</a>
                        </span>
                        {{/if}}
                        
                        <h3 class="post-card-title" itemprop="headline">
                            <a href="{{url}}">{{title}}</a>
                        </h3>
                        
                        {{#if excerpt}}
                        <div class="post-card-excerpt" itemprop="description">
                            <p>{{excerpt}}</p>
                        </div>
                        {{/if}}
                    </header>
                    
                    <footer class="post-card-meta">
                        <time class="post-card-date" 
                              datetime="{{date format="YYYY-MM-DD"}}" 
                              itemprop="datePublished">
                            {{date format="MMM D, YYYY"}}
                        </time>
                        
                        <span class="post-card-reading-time">{{reading_time}}</span>
                    </footer>
                </div>
            </article>
            {{/foreach}}
        </div>
        
        {{pagination}}
    </div>
</section>